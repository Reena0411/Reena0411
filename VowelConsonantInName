#include<stdio.h>
#include<string.h>
int main() {
    char a[20];
    scanf("%[^\n]s",a);
    int vowel , cons=0;
    for(int i=0;a[i];i++)
    {
        if(a[i]=='a'||a[i]=='e'||a[i]=='i'||a[i]=='o'||a[i]=='u'||a[i]=='A'||a[i]=='E'||a[i]=='I'||a[i]=='O'||a[i]=='U'){
            vowel++;
        }else if ((a[i] >= 'a' && a[i] <= 'z') || (a[i] >= 'A' && a[i] <= 'Z')){
            cons++;
        }
       printf("Vowels: %d\n", vowel);
    printf("Consonants: %d\n", cons);
    }
}
