#include <stdio.h>
int main() {
    int num, i, j, isPrime;
    printf("Enter a number: ");
    scanf("%d", &num);
    if (num < 2) {
        printf("%d is not a prime number.\n", num);
        return 0;
    }
    isPrime = 1;
    for (i = 2; i <= num - 1; i++) {
        if (num % i == 0) {
            isPrime = 0;
            break; 
        }
    }
    if (isPrime) {
        printf("%d is a prime number.\n", num);
    } else {
        printf("%d is not a prime number.\n", num);
    }
return 0;
}
