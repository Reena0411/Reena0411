#include <stdio.h>
int main() {
    int n,m;
    printf("number of rows: ");
    scanf("%d", &n);
    printf("number of columns: ");
    scanf("%d", &m);
    int arr[n][m];
    printf("enter elements: \n" );
    for(int i=0;i<n;i++){
        for(int j=0;j<m;j++){
            scanf("%d", &arr[i][j]);}
        }
        for(int i=0;i<n;i++){
           for(int j=0;j<m;j++){
               if(i==0||i==n-1||i+j==n-1){
                   printf("%d ", arr[i][j]);
               }else{
                   printf(" ");
               }
    }
    printf("\n");
}
}
